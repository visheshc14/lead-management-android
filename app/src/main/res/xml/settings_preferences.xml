<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Lead management settings">
        <android.support.v7.preference.EditTextPreference
            android:key="server_location"
            android:title="Server Location"
            android:summary="current location"
            android:dialogMessage="change server location using this entry box."
            android:defaultValue="Default value"/>

        <SwitchPreference
            android:key="dark_theme"
            android:title="Toggle mode"
            android:defaultValue="false"
            />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="Your account">

        <android.support.v7.preference.Preference
            android:key="sign_out"
            android:title="Sign out"
            />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>